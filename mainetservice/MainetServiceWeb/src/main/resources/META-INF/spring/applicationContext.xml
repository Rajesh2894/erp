	 <!-- this bean filters the xss content in the request -->
     <bean id="xssFilter" class="com.abm.mainet.security.XSSContentCheckerFilter">
<!-- 		<property name="mode" value="DENY" /> -->
     <!--  <property name="mode" value="SAMEORIGIN" />  -->
    </bean>
    
    <context:annotation-config></context:annotation-config>
    <aop:aspectj-autoproxy />
	
        
        
