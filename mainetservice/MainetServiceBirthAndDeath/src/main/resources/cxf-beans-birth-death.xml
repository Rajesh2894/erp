<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:cxf="http://cxf.apache.org/core" xmlns:jaxrs="http://cxf.apache.org/jaxrs"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jaxws="http://cxf.apache.org/jaxws"
	xsi:schemaLocation="http://cxf.apache.org/core http://cxf.apache.org/schemas/core.xsd  
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd
http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd">
	<import resource="classpath:META-INF/cxf/cxf.xml" />
	<bean id="bndSwagger2Feature" class="org.apache.cxf.jaxrs.swagger.Swagger2Feature">
		<property name="usePathBasedConfig" value="true"></property>
		<property name="basePath" value="/services/bnd/rest"></property>
		<property name="title" value="Birth And Death API Documentation" />
	</bean>
	<bean id="commonValidationFeature" class="org.apache.cxf.validation.BeanValidationFeature">
		<property name="provider" ref="cxfValidationProvider"/>
	</bean>
	<bean id="cxfValidationProvider" class="org.apache.cxf.validation.BeanValidationProvider" />
	<jaxrs:server address="/bnd/rest" id="bnd">
		<jaxrs:serviceBeans>
			<bean class="com.abm.mainet.bnd.service.BirthRegService" id="birthRegService" />
			<bean class="com.abm.mainet.bnd.service.IssuenceOfBirthCertificateServiceImpl" id="issuanceBirth" />
			<bean class="com.abm.mainet.bnd.service.IssuenceOfDeathCertificateServiceImpl" id="issuanceDeath" />
			<bean class="com.abm.mainet.bnd.service.DeathRegistrationService" id="deathregService" />
			<bean class="com.abm.mainet.bnd.service.DeathRegCorrectionServiceImpl" id="deathregCorrService" />
			<bean class="com.abm.mainet.bnd.service.DeathcertificateServiceImpl" id="deathCert" />
			<bean class="com.abm.mainet.bnd.service.BirthCertificateService" id="birthCertificateService"/>
			<bean class="com.abm.mainet.bnd.service.RtsServiceImpl" id="rtsService"/>
			<bean class="com.abm.mainet.bnd.service.BirthDeathCertServiceImpl" id="BirthDeathCertService"/>
		</jaxrs:serviceBeans>
		<jaxrs:providers>
			<bean class="org.codehaus.jackson.jaxrs.JacksonJaxbJsonProvider"/>
			<bean class="com.abm.mainet.common.jaxrs.util.JaxrsCorsFilter" />
			<bean class="com.abm.mainet.common.exception.CXFFrameworkExceptionHandler" />
			<bean id="exceptionMapper" class="org.apache.cxf.jaxrs.validation.ValidationExceptionMapper">
				<property name="addMessageToResponse" value="true"/>
			</bean>
		</jaxrs:providers>
		<jaxrs:features>
            <ref bean="bndSwagger2Feature" />
            <ref bean="commonValidationFeature"/>
        </jaxrs:features>
	</jaxrs:server>
	<jaxws:endpoint address="/birthRegService" id="BirthReg" implementor="com.abm.mainet.bnd.service.BirthRegService" />
	<jaxws:endpoint address="/issuanceBirthCertService" id="issuanceBirth" implementor="com.abm.mainet.bnd.service.IssuenceOfBirthCertificateServiceImpl"/>
	<jaxws:endpoint address="/issuanceDeathCertService" id="issuanceDeath" implementor="com.abm.mainet.bnd.service.IssuenceOfDeathCertificateServiceImpl"/>
	<jaxws:endpoint address="/deathRegistrationService" id="deathregService" implementor="com.abm.mainet.bnd.service.DeathRegistrationService" />
	<jaxws:endpoint address="/deathRegCorrectionService" id="deathregCorrService" implementor="com.abm.mainet.bnd.service.DeathRegCorrectionServiceImpl" />
</beans>