<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:cxf="http://cxf.apache.org/core" xmlns:jaxrs="http://cxf.apache.org/jaxrs"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jaxws="http://cxf.apache.org/jaxws"
	xsi:schemaLocation="http://cxf.apache.org/core http://cxf.apache.org/schemas/core.xsd  
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd
http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd">
	<import resource="classpath:META-INF/cxf/cxf.xml" />
	<bean id="additionalservicesSwagger2Feature" class="org.apache.cxf.jaxrs.swagger.Swagger2Feature">
		<property name="usePathBasedConfig" value="true"></property>
		<property name="basePath" value="/services/additionalservices/rest"></property>
		<property name="title" value="Additional Services API Documentation" />
	</bean>
	<bean id="commonValidationFeature" class="org.apache.cxf.validation.BeanValidationFeature">
		<property name="provider" ref="cxfValidationProvider"/>
	</bean>
	<bean id="cxfValidationProvider" class="org.apache.cxf.validation.BeanValidationProvider" />
	
	
</beans>
